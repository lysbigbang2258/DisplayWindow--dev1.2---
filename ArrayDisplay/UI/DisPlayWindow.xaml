                            <ColumnDefinition Width="48*" />
                        </Grid.ColumnDefinitions>
                        <Label
                            Grid.Column="0"
                            HorizontalAlignment="Left"
                            Content="脉冲延时：" />
                        <TextBox
                            x:Name="tb_setting_pulse_delay"
