                            Grid.Column="3"
                            Grid.ColumnSpan="2"
                            Margin="0,5,4.75,5"
                            HorizontalAlignment="Right"
                            Orientation="Horizontal">
                            <Button
                                Width="30"
                                Height="30"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Click="OnPulseDelayRead_OnClick"
                                Content="读" />
                            <Button
                                Width="30"
                                Height="30"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Click="OnPulseDelayWrite_OnClick"
                                Content="写" />
                            <Button
                                Width="30"
                                Height="30"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Click="OnPulseDelaySave_OnClick"
                                Content="存" />
