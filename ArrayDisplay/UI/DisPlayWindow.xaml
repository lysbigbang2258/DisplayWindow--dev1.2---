                                <GridSplitter Grid.Row="1" Height="10" />
                                <WrapPanel Grid.Row="2">
                                    <Label Width="100" Height="40">DAC幅值：</Label>
                                    <TextBox
                                        Name="tb_dacLen"
                                        Width="100"
                                        Height="32"
                                        FontFamily="18"
                                        Text="3000"
                                        TextAlignment="Center" />
                                    <Label Width="100" Height="40">DAC通道：</Label>
