                            MouseWheel="TextboxOnMouseWheel"
                            TextWrapping="Wrap" />
                        <Label
                            Grid.Column="2"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Content="ns" />
                        <StackPanel
                            Grid.Column="3"
                            Margin="5"
                            HorizontalAlignment="Right"
                            Orientation="Horizontal">
                            <Button
                                Width="30"
                                Height="30"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Click="OnPulseWidthRead_OnClick"
                                Content="读" />
                            <Button
                                Width="30"
                                Height="30"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Click="OnPulseWidthWrite_OnClick"
                                Content="写" />
                            <Button
                                Width="30"
                                Height="30"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Click="OnPulseWidthSave_OnClick"
                                Content="存" />
                        </StackPanel>
                    </Grid>

                    <Grid Grid.Row="4" Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="110" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="0.2*" />
                            <ColumnDefinition Width="0.3*" />
                            <ColumnDefinition Width="0.5*" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Label
                            Grid.Column="0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Content="ADC偏移：" />
                        <TextBox
                            x:Name="tb_setting_adc_offset"
                            Grid.Column="1"
                            MinWidth="100"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            input:InputMethod.IsInputMethodEnabled="False"
                            Text=""
                            TextWrapping="Wrap" />
                        <Label
                            Grid.Column="2"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Content="V" />
                        <Label
                            Grid.Column="3"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Content="ADC：" />

                        <TextBox
                            x:Name="tb_setting_adc_num"
                            Grid.Column="4"
                            MinWidth="100"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            input:InputMethod.IsInputMethodEnabled="False"
                            Text="1"
                            TextWrapping="Wrap" />

                        <StackPanel
                            Grid.Column="5"
                            Margin="5"
                            HorizontalAlignment="Right"
                            Orientation="Horizontal">
                            <Button
                                Width="30"
                                Height="30"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Click="OnAdcOffsetRead_OnClick"
                                Content="读" />
                            <Button
                                Width="30"
                                Height="30"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Click="OnAdcOffsetWrite_OnClick"
                                Content="写" />
                            <Button
                                Width="30"
                                Height="30"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Click="OnAdcOffsetSave_OnClick"
                                Content="存" />
                        </StackPanel>
                    </Grid>
                </Grid>
                <!--  工具栏  -->
                <Grid
                    Name="toolGrid"
                    Grid.RowSpan="2"
                    Grid.Column="1"
                    Margin="0,0,0,10">
                    <StackPanel
                        Grid.Row="0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Orientation="Horizontal">

                        <Button
                            x:Name="btnWindowMin"
                            Width="36"
                            Height="36"
                            VerticalAlignment="Center"
                            Click="OnBtnWindowMinClick"
                            Content=""
                            Cursor="Hand"
                            ToolTip="最小化">
                            <Button.Background>
                                <ImageBrush ImageSource="../Resource/win_最小化_黑.png" />
                            </Button.Background>
                        </Button>
                        <Button
                            x:Name="btnWindowShutDown"
                            Width="36"
                            Height="36"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Click="OnBtnWindowShutDownClick"
                            Content=""
                            Cursor="Hand"
                            ToolTip="关闭系统">
                            <Button.Background>
                                <ImageBrush ImageSource="../Resource/win_关闭_黑.png" />
                            </Button.Background>
                        </Button>
                    </StackPanel>

                </Grid>
            </Grid>
            <!--  图像面板  -->
            <Grid
                Name="waveGrid"
                Grid.Row="1"
                HorizontalAlignment="Left"
                VerticalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TabControl
                    Name="tabControl"
                    Width="1970"
                    Height="793"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    SelectionChanged="TabControl_OnSelectionChanged">

                    <TabItem
                        Name="delayItem"
                        Width="100"
                        Height="40"
                        Header="延时校准">
                        <Grid Name="delaygrid" Background="#FFE5E5E5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="337*" />
                                <ColumnDefinition Width="1623*" />
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.ColumnSpan="2">
                                <WrapPanel>
                                    <Label
                                        Width="100"
                                        Height="40"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Content="延时通道：" />
                                    <TextBox
                                        x:Name="tb_deleyChannel"
                                        Width="100"
                                        Height="40"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontFamily="18"
                                        KeyUp="Tb_deleyChannel_OnKeyUp"
                                        Text="1"
                                        TextAlignment="Center"
                                        TextWrapping="Wrap" />
                                    <Label
                                        Width="100"
                                        Height="40"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Content="通道延时：" />
                                    <TextBox
                                        x:Name="tb_deleyTime"
                                        Width="100"
                                        Height="40"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        KeyUp="Tb_deleyTime_OnKeyUp"
                                        Text="200"
                                        TextWrapping="Wrap" />
                                    <Label
                                        Width="100"
                                        Height="40"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Content="ns" />
                                    <StackPanel
                                        Margin="5"
                                        HorizontalAlignment="Right"
                                        Orientation="Horizontal">
                                        <Button
                                            Width="100"
                                            Height="40"
                                            Margin="0,0,5,0"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            Click="OnDelayTimeRead_OnClick"
                                            Content="读" />
                                        <Button
                                            Width="100"
                                            Height="40"
                                            Margin="0,0,5,0"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            Click="OnDelayTimeWrite_OnClick"
                                            Content="写" />
                                        <Button
                                            Width="100"
                                            Height="40"
                                            Margin="0,0,5,0"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            Click="OnDelayTimeSave_OnClick"
                                            Content="存" />
                                    </StackPanel>
                                    <Button
                                        Name="btn_delaystart"
                                        Width="100"
                                        Height="40"
                                        Margin="0,0,5,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
