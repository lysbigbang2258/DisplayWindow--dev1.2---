                            MouseWheel="TextboxOnMouseWheel"
                            Text=""
                            TextWrapping="Wrap" />
                        <Label
                            Grid.Column="2"
                            Grid.ColumnSpan="2"
                            Margin="0.25,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Content="ns" />
