                            Grid.Column="0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Content="脉冲宽度 : " />
                        <TextBox
                            x:Name="tb_setting_pulse_width"
                            Grid.Column="1"
                            MinWidth="100"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
